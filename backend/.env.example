# Configuración del Backend

# Base de datos
DATABASE_URL=sqlite+aiosqlite:///./motor_monitoring.db

# MQTT Configuration
MQTT_BROKER=tu-cluster.s1.eu.hivemq.cloud
MQTT_PORT=8883
MQTT_USERNAME=tu_usuario
MQTT_PASSWORD=tu_contraseña
MQTT_TOPIC_PREFIX=motor/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Seguridad (generar con: openssl rand -hex 32)
SECRET_KEY=tu_clave_secreta_aqui_cambiar_en_produccion

# Machine Learning
ML_MODEL_PATH=./models/anomaly_detector.joblib
ML_RETRAIN_INTERVAL=3600  # segundos

# Umbrales de Alerta
TEMP_WARNING=60
TEMP_CRITICAL=80
VIBRATION_WARNING=7
VIBRATION_CRITICAL=10
RPM_WARNING=2500
RPM_CRITICAL=3000
